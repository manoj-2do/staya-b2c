# Copy this file to .env and fill in real values. File must be at project root (next to package.json).
# Restart the dev server (npm run dev) after changing .env.

# Mock hotel search — set to "true" to use mock data instead of API
NEXT_PUBLIC_USE_MOCK_HOTEL_SEARCH=false

# TravClan — required credentials (server-side only)
TRAVCLAN_API_KEY=
TRAVCLAN_USER_ID=
TRAVCLAN_MERCHANT_ID=

# TravClan — API URLs (sandbox defaults)
TRAVCLAN_AUTH_URL=https://trav-auth-sandbox.travclan.com
TRAVCLAN_API_BASE_URL=https://hotel-api-sandbox.travclan.com
TRAVCLAN_VOLT_LITE_API_URL=https://hotel-volt-api-sandbox.travclan.com

# TravClan — optional
TRAVCLAN_LOGIN_ENDPOINT=/authentication/internal/service/login
TRAVCLAN_REFRESH_ENDPOINT=/authentication/internal/service/refresh
TRAVCLAN_SOURCE=website
